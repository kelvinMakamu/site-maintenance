{{#partial "title"}}
    View engineer details and assigned sites
{{/partial}}

{{#partial "content"}}

    <div class="row">
        <div class="col-md-3 col-lg-3 col-sm-12 department-form">
            <h4>Assign Site</h4>
            <hr>
            <form method="post" action="/engineers/{{engineer.id}}/assignSite">
                <div class="row">
                    <div class="col-md-12 col-lg-12 col-sm-12">
                        <div class="form-group">
                            <label>Select Site</label>
                            <select name="siteId" class="form-control" required>
                                <option></option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 col-lg-12 col-sm-12">
                        <hr>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 col-lg-6 col-sm-12">
                        <div class="form-group">
                            <a href="/engineers/{{engineer.id}}/assignSite" class="btn btn-secondary btn-sm">
                                New Site
                            </a>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-6 col-sm-12">
                        <div class="form-group">
                            <input class="btn btn-success btn-sm" type="submit" value="Assign Site">
                        </div>
                    </div>
                </div>
            </form>
        </div>
        <div class="col-md-8 col-lg-8 col-sm-12">
            <h4 class="text-center"> <b>Eng. {{engineer.firstName}} {{engineer.lastName}}</b> Assigned Sites</h4>
            <hr/>
            <div class="container department-container">
                {{#if sites}}
                    <div class="row">
                        {{#each sites }}
                            <div class="col-md-5 col-lg-5 col-sm-12 card">
                                <div class="row">
                                    <div class="col-md-12 col-lg-12 col-sm-12">
                                        <p class="text-center department-name">{{name}}</p>
                                        <h3 class="text-center">{{town}}</h3>
                                    </div>
                                    <div class="col-md-12 col-lg-12 col-sm-12">
                                        <hr>
                                    </div>
                                    <div class="col-md-6 col-lg-6 col-sm-12">
                                        <a href="/sites/{{id}}" class="btn btn-warning btn-sm">Update</a>
                                    </div>
                                    <div class="col-md-6 col-lg-6 col-sm-12">
                                        <a href="/engineers/{{id}}/delete" class="btn btn-danger btn-sm">Delete</a>
                                    </div>
                                </div>
                            </div>
                        {{/each}}
                    </div>
                {{else}}
                    <div class="row">
                        <div class="col-md-10 col-md-10 col-sm-12 card">
                            <p class="no-department">No assigned sites available!</p>
                            <p>The engineer has not been assigned any sites to maintain.</p>
                        </div>
                    </div>
                {{/if}}
            </div>
        </div>
    </div>
{{/partial}}

{{> layout.hbs}}